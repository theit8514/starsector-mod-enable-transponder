{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "label": "update-version",
            "type": "shell",
            "command": "./scripts/update-version.ps1",
            "problemMatcher": []
        },
        {
            "label": "deploy",
            "type": "shell",
            "command": "./deploy.sh",
            "options": {
                "cwd": "./scripts/"
            },
            "windows": {
                "command": ".\\deploy.cmd",
                "options": {
                    "cwd": ".\\scripts"
                }
            },
            "problemMatcher": [],
            "dependsOn": [
                "verify",
                "update-version"
            ]
        }
    ]
}